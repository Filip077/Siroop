<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.siroop.filip.siroop.SpashScreen">

    <ImageView
        android:id="@+id/siroop_image"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_above="@+id/happy_shopping"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        app:srcCompat="@drawable/logosiroop" />


    <ImageView
        android:id="@+id/happy_shopping"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        app:srcCompat="@drawable/happyshopping_rod" />


</RelativeLayout>
